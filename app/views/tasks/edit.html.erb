
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit %>
  <% end %>
<%= link_to "Delete this task", delete_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
